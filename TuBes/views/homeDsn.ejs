</head>
<body onload="realTimeClock()">
    <div class="marginKiri"></div>
    <div class="header">
        <div class="garisSalam"></div>
        <div class="containerLogoIF">
            <img src = logo/iflogo.png id="logoif">
        </div>
        <div class="tulisanHeader">
            <p class="tulisanSatu">Salam Akademik!</p>
            <p class="tulisanDua">Selamat datang di website Topik Skripsi Informatika UNPAR!</p>
        </div>
        <a href="/logout" id="sOut">
            <img src="icon/Sign_in.png" id="sign_out" alt="sOut">
        </a>
    </div>
    <div class = "home"> 
        <div id="DaftarT">
            <b style='font-family:"Open Sans", monospace;font-size:120%'>
                DAFTAR TOPIK SKRIPSI - T.A <%= tahunA %> <%= semesterInput %>
            </b>
            <br>
            <br>
            <b style='font-family:"Open Sans", monospace;font-size:95%'>
                Keterangan:
            </b>
        </div>
        <div id="infoUser">
        <!-- sesuai login --> 
            <div id="circle">
                <p id="first_letter"><%= inisial %> </p> <!-- kalo nama = Erwin Darsono, maka huruf = E -->
            </div>
            <p class="nama"><%= nama %></p> <!-- kalo nama = Erwin Darsono, maka = ERWIN DARSONO -->
            <!-- <p>6182001002@student.id</p> sesuai NPM/NIK, mahasiswa = student.com, dosen = lecturer.com, admin = admin.com -->
            <p class="email_user"><%= email %></p>
        </div>
        <div class="wrapper">
            <div id="fitur">
                <div class="review_topik">
                    <img src = icon/Chat_alt_add_fill.png id="iconReviewT">
                    <a href="/homeDsn" id="RT">
                        <input type="button" id="buttonRT" alt="RT" name="reviewT" value="Review Topik">
                    </a>                    
                </div>
                <div class="daftar_topik">
                    <img src = icon/Folder_alt_fill.png id="iconDaftarT">
                    <a href="/daftarTopikDsn" id="DT">
                        <input type="button" id="buttonDT" alt="DT" name="daftarT" value="Daftar Topik">
                    </a>                    
                </div>
                <div class="unggah_topik">
                    <img src = icon/import_fill.png id="iconUnggahT">
                    <a href="/unggahDsn" id="UT">
                        <input type="button" id="buttonUT" alt="UT" name="unggahT" value="Unggah Topik">
                    </a>                    
                </div>
                <div class="kotak_tinjauan">
                    <img src = icon/Message_fill.png id="iconKotakT">
                    <a href="/tinjauanDsn" id="KT">
                        <input type="button" id="buttonKT" alt="KT" name="kotakT" value="Kotak Tinjauan">
                    </a>                    
                </div>
            </div>
            <div class="garis_waktu"></div>
            <div id="real_day"></div>
            <div id="real_time"></div>
        </div>
        <div id="DaftarTopik">
            <div id="ket" style='font-family:"Open Sans", monospace;font-size:85%'>
                <div id="ket1">
                    - CS = Computing Science
                    <br>
                    - DS = Data Science
                </div>
                <div id="ket2">
                    - (*) = Topik Skripsi Jenis Bintang
                    <br>
                    - Non(*) = Topik Skripsi Jenis Reguler
                    <br><br>
                    <!-- <form action="/deleteTopikd" method="post" enctype="multipart/form-data">
                        <div id="delT">
                            <input type="text" name="deleteKT" id="deleteKT" placeholder="Tulis Kode Topik">
                            <input type="submit" value="delete" id="deletebtn">
                        </div>
                    </form> -->
                </div>
                <div id="ket3">
                    Masa review hingga:                
                    <br>
                    <div id="date">
                        <!-- sesuai input admin -->                    
                    </div>   
                    <br> 
                    <br>
                    <form action="/filterBPd" method="post" enctype="multipart/form-data">
                        <div id="filter">
                            <select name="FilterBP" id="FilterBP" placeholder="Cari Bidang Peminatan"> 
                                <option value="All">All</option>     
                                <option value="CS">Computing Science</option>
                                <option value="DS">Data Science</option>                                
                            </select>
                            <input type="submit" value="filter" id="searchbtn">
                        </div>
                    </form>
                    
                </div>
            </div>
            <br>
            <div id="tabelDT">
                <table rules="all" id="tbl">
                    <tr>
                        <td id="judulTbl"> No </td>
                        <td id="judulTbl"> Judul Topik </td>
                        <td id="judulTbl"> Dosen Pengaju </td>
                        <td id="judulTbl"> Kode Topik </td>
                        <td id="judulTbl"> Bidang Peminatan </td>
                        <td id="judulTbl"> Jenis </td>
                        <td id="judulTbl"> Status </td>
                        <td id="judulTbl"> Review </td>
                    </tr>
                    <% let index = 1 %> 
                    <% for (let topik of result) { %>
                        <tr class="txt">
                            <td> <%= index++ %> </td>
                            <td> <%= topik.judul %> </td>
                            <td> <%= topik.nama %> </td>
                            <td> <%= topik.kodeTopik %> </td>
                            <td> <%= topik.bidangPeminatan %> </td>
                            <td> <%= topik.jenisSkripsi %> </td>
                            <td id="sf"> <%= topik.statusFinal %> </td>
                            <td> <img src="./icon/Edit_fill.png" id="edit" class="ed" onclick="opn()"><img src="./icon/Setting_fill.png" id="edit" class="opt" onclick="opn1()" hidden> </td>
                        </tr>
                    <% } %> 
                </table> 
                
            </div>
            <!-- <br>
            <div>
                <img src="./icon/Setting_fill.png"  onclick="opn4()">
            </div> -->
        </div>
        
        <div id="ovy">  
            <div id="isi" >
                <div id="iconHead">
                    <img src = icon/circle.png id="ic1">
                    <img src = icon/circle.png id="ic1">
                    <img src = icon/circle.png id="ic1">
                    <div class="tt">Tinjauan Dosen</div>
                    <a href="/homeDsn" id="ic2">
                        <img src = "icon/Close.png" alt="ic2">
                    </a> 
                </div>
                <form action="/review" method="post" enctype="multipart/form-data">
                    <label class="inputKode_review">Kode Topik</label>
                    <input type="text" name="kodeTopik">
                    <!-- <div id="tt1">Judul Topik: Perangkat Lunak Sistem Manajemen Inventori</div>
                    <div id="tt1">Dosen Pengaju: Rosa De Lima Endang Padmowati</div> -->
                    <hr>
                    <div id="tt2">Status</div>
                    <div id="pc">
                        <input type="radio" name="radio" id="ck" onclick="offset()" value="ok">
                        <label class="container">OK</label>    
                        <input type="radio" name="radio" id="ck1" onclick="option()" value="inq">
                        <label class="container">INQ</label>
                        <input type="radio" name="radio" id="ck2" onclick="option1()" value="no">
                        <label class="container">NO</label>
                    </div>
                    <div id="kk" hidden>
                        <div id="pr1">
                            <input type="submit" value="Kirim" id="SY">
                            <input type="submit" value="Batal" id="ST">
                        </div>
                    </div>
                    <div id="kmn" hidden>
                        <div id="tt2">Komentar<div id="tt3">* max: 250 kata</div></div>
                        <div id="ta"><textarea placeholder="Masukan komentar di sini" rows="4" cols="74" maxlength="250" id="maxta" name="komentar"></textarea></div>
                        <div id="pr1">
                            <input type="submit" value="Kirim" id="SY">
                            <input type="submit" value="Batal" id="ST">
                        </div>
                    </div>
                    <div id="prt" hidden>
                        <div id="tt2">Pertanyaan<div id="tt3">* max: 250 kata</div></div>
                        <div id="ta"><textarea placeholder="Masukan pertanyaan di sini" rows="4" cols="74" maxlength="250" name="pertanyaan"></textarea></div>
                        <div id="pr">
                            <input type="submit" value="Kirim" id="SY">
                            <input type="submit" value="Batal" id="ST">
                        </div>
                    </div>
                    <!-- <div id="pr">
                        <input type="submit" value="Kirim" id="SY" onclick="opn1()">
                        <a href="/home" id="STbtn">
                            <input type="submit" value="Batal" id="ST" alt="STbtn">
                        </a> 
                    </div> -->
                </form>           
            </div>       
        </div>
